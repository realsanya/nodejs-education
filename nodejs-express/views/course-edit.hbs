<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="POST">
   <div class="input-field">
      <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
      <label for="title">Название курса</label>
      <span class="helper-text" data-error="Введите навзание" />
    </div>

    <div class="input-field">
      <input id="price" name="price" type="text" class="validate" value="{{course.price}}" min="1" required>
      <label for="price">Цена курса</label>
      <span class="helper-text" data-error="Введите цену" />
    </div>

    <div class="input-field">
      <input id="img" name="img" type="text" class="validate" value="{{course.img}}" required>
      <label for="img">URL картинки</label>
      <span class="helper-text" data-error="Введите URL картинки" />
    </div>

    <input type="hidden" name="id" value="{{course.id}}"/>

    <button class="btn btn-primary">Редактировать курс</button>
</form>